<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".inspirationmeal.view.RandomMealFragment">

    <ImageView
        android:id="@+id/rMealThumb"
        android:layout_width="391dp"
        android:layout_height="256dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rmTitle"
        android:layout_width="273dp"
        android:layout_height="72dp"
        android:layout_marginStart="2dp"
        android:background="@color/white"
        android:text="@string/adjust"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/rMealThumb"
        app:layout_constraintTop_toBottomOf="@+id/rMealThumb" />

    <Button
        android:id="@+id/favBtn"
        android:layout_width="116dp"
        android:layout_height="68dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/rMealThumb"
        app:layout_constraintTop_toBottomOf="@+id/rMealThumb" />

</androidx.constraintlayout.widget.ConstraintLayout>